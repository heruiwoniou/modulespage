.comsys-SingleCombox-layout
    width: 100%
    position: relative
    border:1px solid $border-color
    box-sizing:border-box
    .comsys-TextBox
    .comsys-TipTextBox
        border:0px
.comsys-SingleCombox-input
    margin-right: 30px
    height: 100%
    position: relative
    .comsys-TextBox
    .comsys-TipTextBox
        height: $line-height - 2 !important
    input
        border: 0px
        background: transparent
        position: absolute
        left: 0px
        top: 0px
        outline:none
        height: 100%
.comsys-SingleCombox-button
    position: absolute
    right: 0
    top: 0
    height: 100%
    width: 30px
    cursor: pointer
    text-align: center
    font-size: $font-ico-size
    &:before
        font-family: "ElegantIcons"
        line-height: 1.5
        content: $combox-icon
.comsys-SingleCombox-drop
    font-size: 12px
    position:absolute
    display: block
    background: white
    z-index: 2
    top: 0px
    left: 0px
    display: none
    overflow: hidden
    overflow-y: auto
    border: 1px solid $border-color
    z-index:999999
    box-sizing:border-box
    box-shadow: 0px 0px 5px 0px #cccccc
    div.comsys-SingleCombox-option
        cursor: default
        box-sizing:border-box
        padding-left:5px
        @extend .textHidden
        &:hover
            background: #e3e3fd
    div.selected
        background: #5050ef
        color: white