@keyframes window-loading-rotate-animate
    0%
        transform rotate(0deg)
    100%
        transform rotate(360deg)
//弹出窗体基本样式
.comsys-box-base
    z-index:951
    background:#fff
    box-sizing:content-box
    .comsys-box-head
    .comsys-box-title
    .comsys-box-close
    .comsys-box-content
        box-sizing:border-box
    &.box-moving
    &.box-loading
        &:after
            position absolute
            left 50%
            top 50%
            margin-left -40px
            margin-top -18px
            color $themeColor
            iconfont()
            line-height 1
            font-size 80px;
    &.box-loading
        &:after
            content ''
            animation window-loading-rotate-animate 2s infinite linear
    &.box-moving
        &:after
            content ''
            animation none
    &.forward-animate
        opacity: 0;
        transform: perspective(0px) rotateY(90deg);
        transition: transform .3s cubic-bezier(0.01,0.975,0.4775,0.9775) 0ms,opacity .3s cubic-bezier(0,2,0,2) 0s;
        &.forward-in
            transform: perspective(1900px) rotateY(0deg);
            opacity: 1;
        &.forward-out
            transform: perspective(1900px) rotateY(90deg);
            opacity: 0;
.comsys-box-window
    iframe
        float: left
    border: $window-border solid $themeColor
    box-shadow: 0px 0px 2px 0px #7f7f7f - 20%
    background $themeColor + 80%
    .comsys-box-head
        background: $themeColor
        height: $window-titleHeight
        width: 100%
        line-height: $window-titleHeight
        position: relative;
        cursor: default;
        color: $themeFontColor;
        .comsys-box-title
            text-align: center;
            font-size:16px;
            margin-right: $window-titleHeight;
            textHidden()
            color: #fff
        .comsys-box-close
            position: absolute;
            right: 15px;
            top: 0px;
            z-index:1;
            height: $window-titleHeight;
            width: $window-titleHeight - 15;
            font-size: 2.2em;
            text-align: center;
            &:before
                font-family: "ElegantIcons";
                line-height: $window-titleHeight - 0.5;
                color:$themeColor - 15%
                content: $close;
            &:hover:before
                color white
    .comsys-box-content
        background: #fff;
        width: 100%;
        padding: 2px;
        overflow: auto;
        // &>*
        //     display block !important;

.comsys-box-dialog
    .comsys-box-head
        .comsys-box-title
            text-align: left;
            text-indent: 20px;
    .comsys-box-buttons
        background: $themeColor
        padding-top: $window-border;
        box-sizing: content-box;
        text-align: right;
        .comsys-box-button
            margin:4px 4px 4px 0px;
            height: $window-titleHeight - 8px;
            max-width: 100px;
            background:$themeColor + 15%;
            display: inline-block;
            min-width: 100px;
            line-height:$window-titleHeight - 8px;
            vertical-align: top;
            text-align: center;
            color:#fff;
            cursor: pointer;
            &:hover
                background:$themeColor + 85%;
                color:$themeColor;

    .comsys-box-content
        overflow: hidden;
        line-height: 20px;
        font-size:16px;
        padding:19px 10px 20px 60px;;
        position: relative;
        text-align: left;
        &:before
            font-size:30px;
            padding:0 10px;
            position: absolute;
            top: 8px;
            left: 5px;
            iconfont();
            line-height 1.5;
        &.info:before
            color:#00cd99;
            content:"p";
        &.error:before
            color:#e73e4d;
            content:"Q";
        &.question:before
            color:#ffb135;
            content:"t";

.comsys-box-resize-window
    .comsys-box-head
        .comsys-box-title
            margin-right: $window-titleHeight * 2;
        .comsys-box-full
            position: absolute;
            right: $window-titleHeight;
            top: 0px;
            height: $window-titleHeight;
            width: $window-titleHeight - 15;
            font-size: 1.5em;
            text-align: center;
            &:before
                position relative
                top 2px
                font-family: "ElegantIcons";
                line-height: $window-titleHeight - 0.5;
                content: "V";
                color:$themeColor - 15%;
            &:hover:before
                color white
        .comsys-box-normal
            display: none;
            position: absolute;
            right: $window-titleHeight;
            top: 0px;
            height: $window-titleHeight;
            width: $window-titleHeight - 15;
            font-size: 1.5em;
            text-align: center;
            &:before
                position relative
                top 2px
                font-family: "ElegantIcons";
                line-height: $window-titleHeight - 0.5;
                content: "W";
                color:$themeColor - 15%;
            &:hover:before
                color white
