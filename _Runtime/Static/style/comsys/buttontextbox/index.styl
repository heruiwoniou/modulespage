.comsys-ButtonTextBox-layout
	width: 100%
	position: relative
	border:1px solid $border-color
	box-sizing:border-box
	border-radius $borderradius
	transition box-shadow .1s ease , border .1s ease
	&.focus-outerline
		outerlineset($inputoutlinecolor)
	.comsys-TextBox
	.comsys-TipTextBox
		border:0px
	.comsys-ButtonTextBox-input
		height: 100%
		position: relative
		input
			border: 0px
			background: transparent
			position: absolute
			left: 0px
			top: 0px
			outline:none

	.comsys-ButtonTextBox-button
		position: absolute
		top: 0
		height: 100%
		width: 30px
		cursor: pointer
		text-align: center
		font-size:$font-size
		&:before
			font-family: "ElegantIcons"
			line-height: 1.5
			content: $combox-icon
	&.location-left
		.comsys-ButtonTextBox-input
			margin-left: 30px
		.comsys-ButtonTextBox-button
			left: 0
	&.location-right
		.comsys-ButtonTextBox-input
			margin-right: 30px
		.comsys-ButtonTextBox-button
			right: 0