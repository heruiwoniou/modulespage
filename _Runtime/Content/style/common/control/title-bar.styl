titlebargcolor($paramcolor)
	&:before
		border-color $paramcolor
.title-bar
	line-height 30px
	font-size 14px
	font-weight bold
	margin-bottom 10px
	&:before
		vertical-align middle
		content ''
		display inline-block
		width 12px
		height 12px
		position relative
		top -1px
		border-radius 100%
		border 2px solid $color3
		margin-right 5px
	&.r
		titlebargcolor($color3)
	&.g
		titlebargcolor($color1)
	&.b
		titlebargcolor($color2)
	&.y
		titlebargcolor($color5)
	&.p
		titlebargcolor($color4)