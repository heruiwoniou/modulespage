search-placeholder($color)
	font-family '微软雅黑'
	color $color
search-control-base($height, $width = 100%)
	.search-control
		position relative
		inlineBlock()
		width $width
		height $height
		line-height $height
		border 1px solid white
		.search-transparent
			position absolute
			left 0
			top 0
			width 100%
			height 100%;
			opacity .2
			background white
		.search-input
			position relative
			height $height - 2px
			margin-right 40px
			font-size 0
			z-index 1
			input
				padding 0 10px
				background transparent
				border none
				height $height - 2px
				line-height $height - 2px
				width 100%
				height 100%
		.search-button
			position absolute
			right 0
			top 0
			width 40px
			height $height - 2px
			line-height $height - 5px
			text-align center
			z-index 1
			b
				inlineBlock()
				height 20px
				width 20px
				background url('./../images/search-icon.png') no-repeat center center;
search-control-white($height, $width = 100% )
	search-control-base($height,( $width is defined ? $width : 100% ))
	.search-control
		border 1px solid white
		.search-transparent
			opacity .2
			background white
		.search-input
			input
				color white
				cursor pointer
				&::-webkit-input-placeholder
				&:-moz-placeholder
				&::-moz-placeholder
				&:-ms-input-placeholder
					search-placeholder(white)
search-control-purple($height, $width = 100% )
	search-control-base($height, ( $width is defined ? $width : 100% ))
	.search-control
		border 1px solid #d8d8d8
		.search-button
			right -1px
			top -1px
			height $height
			line-height $height - 3px
			background #6c397f