@keyframes rotate-animate
	0%
		transform rotate(0deg)
	100%
		transform rotate(360deg)
.comsys-box-base
	&.forward-animate
		opacity: 0;
		transform: perspective(0px) rotateY(90deg);
		transition: transform .3s cubic-bezier(0.01,0.975,0.4775,0.9775) 0ms,opacity .3s cubic-bezier(0,2,0,2) 0s;
		&.forward-in
			transform: perspective(1900px) rotateY(0deg);
			opacity: 1;
		&.forward-out
			transform: perspective(1900px) rotateY(90deg);
			opacity: 0;
.comsys-box-base
	&.ui-draggable-dragging
		&:after
			position absolute
			left 50%
			top 50%
			margin-left -20px
			margin-top -20px
			color white
			iconfont()
			font-size 40px;
			content 'î€­'
			animation rotate-animate 2s
.comsys-box-window
	.comsys-box-head
		.comsys-box-title
			text-indent 20px
			text-align left