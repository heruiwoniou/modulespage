.comsys-box-base
	&.forward-animate
		opacity: 0;
		transform: perspective(0px) rotateY(90deg);
		transition: transform .3s cubic-bezier(0.01,0.975,0.4775,0.9775) 0ms,opacity .3s cubic-bezier(0,2,0,2) 0s;
		&.forward-in
			transform: perspective(600px) rotateY(0deg);
			opacity: 1;
		&.forward-out
			transform: perspective(600px) rotateY(90deg);
			opacity: 0;
.comsys-box-window
	.comsys-box-head
		.comsys-box-title
			text-indent 20px
			text-align left
		div[class*=comsys-box-]:before
			opacity .8
			color white
		div[class*=comsys-box-]:hover:before
			opacity 1
.comsys-box-dialog
	.comsys-box-buttons
		background transparent
		padding 5px
		a:last-child
			margin-left 5px
.comsys-SingleCombox-layout
	.comsys-SingleCombox-button
		top: 5px;
		bottom: 5px;
		right: 2px;
		height: auto;
		line-height: 13px;
		border-left: 1px solid $border-color;
		&:before
			color $border-color;
			position relative
			top -1px
			font-weight bold
	&.focus-outerline
		.comsys-SingleCombox-button
			border-left: 1px solid $inputoutlinecolor
			&:before
				color $inputoutlinecolor
.comsys-SingleCombox-drop
	background #0b5c87
	border-color:$inputoutlinecolor - 20%
	box-shadow: 0px 0px 5px 0px $inputoutlinecolor - 20%
	div.comsys-SingleCombox-option
		textHidden()
		&:hover
			background $inputoutlinecolor - 10%
			color white
		&.selected
			background $inputoutlinecolor
			color white
.comsys-ButtonTextBox-layout
	&.timebutton
		.comsys-ButtonTextBox-button
			cursor default
			font-size 0
			@extend .icon-calendar
			&:before
				setFontSystem()
				position relative
				vertical-align middle
				top -2px
				color $border-color - 20%
				font-size 19px
		&.focus-outerline
			.comsys-ButtonTextBox-button
				&:before
					color $inputoutlinecolor
.comsys-ButtonTextBox-layout
	&.searchbutton
		.comsys-ButtonTextBox-button
			cursor default
			font-size 0
			@extend .icon-search
			&:before
				setFontSystem()
				position relative
				vertical-align middle
				top -2px
				color $border-color - 20%
				font-size 19px
		&.focus-outerline
			.comsys-ButtonTextBox-button
				&:before
					color $inputoutlinecolor