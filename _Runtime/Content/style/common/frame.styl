html
	*
		color $fontcolor1
frame-base(0px,66px);
.header
	position fixed
	left 0
	right 0
	top 0
	height 55px
	z-index 2
	.nav-transparent
		width 100%
		background $headernavcolor2
		height 55px
		//opacity .57
	.nav
		position absolute
		top 0
		width 100%
		height 55px
		z-index 3
		font-size 0
		line-height 55px
		.logo
			display inline-block
			vertical-align middle
			width 250px
			height 55px
			background url('./../images/logo.png') center no-repeat
		.person
			padding 0 20px 0 0
			display inline-block
			float right
			a.login
				color white
				i
					position relative
					top -1px
					vertical-align middle
					margin-right 5px
					display inline-block
					background url('./../images/person-icon.png') center no-repeat
					width 12px
					height 14px
		.menu
			margin-left 30px
			vertical-align middle
			display inline-block
			font-size 0
			line-height 55px
			li
				font-size 0
				height 55px
				line-height 55px
				vertical-align middle
				display inline-block
				min-width 100px
				text-align center
				a
					text-decoration none
					display block
					font-size 16px
					color white
				&:hover
					background $color9 - 20%
				&.select
					background $color9
					a
						cursor default
.footer
	color #838383
	text-align center
	line-height 66px
	font-size 14px
	background $footerbackcolor