$basefontcolor = #c9f1ff;
.bcolor
	background rgba(0,168,255,.3)
.color-1
	color $color1
	*
		color $color1
.color-2
	color $color2
	*
		color $color2
.color-3
	color $color3
	*
		color $color3
html
	body
		/* @meta {"spritesheet": {"include": false}} */
		background-image url('./../images/background.jpg')
		background-color black + 20%
		background-repeat no-repeat
		background-position center center
		background-attachment fixed
		background-size cover
		*
			color $basefontcolor - 20%
.header
	height 80px
	background rgba(255, 255, 255, .05)
	.logo
		width 120px
		height 80px
		ib()
		background url('./../images/logo.png') no-repeat center center
	.menus
		ib()
		margin-left 50px
		ul
			height 80px
			line-height 80px
			font-size 0
			li
				ib()
				text-align center
				margin-right 20px
				height 80px
				min-width 150px
				font-size 0
				border-bottom 4px solid transparent
				a
					text-align center
					line-height 80px
					ib()
					span
					i
						color white
						display block
						line-height 1
					span
						line-height 1.4
						font-size 16px
					i
						font-size 10px
						font-style normal
					&:hover
						text-decoration none
				&:hover
				&.active
					text-shadow 0 0 5px white
					border-color $color
	.info
		ib()
		fr()
		height 80px
		line-height 80px
		a
			padding 0 5px
			color white
			text-align center
			ib()
			i[class*='icon-']:before
				color white
			&:hover
				text-decoration none
				color $color !important
				i[class*='icon-']:before
					color $color !important
			i.icon-logout
				font-size 24px
				ib()
				position relative
				top -2px
.footer
	color white
	background-color rgba(56, 56, 56, .6)
.section-5-container
	padding 5px
.section-container
	padding 10px
.section-20-container
	padding 20px
.section-30-container
	padding 30px
.section-40-container
	padding 40px

::-webkit-input-placeholder
	color $basefontcolor - 40%
:-moz-placeholder
	color $basefontcolor - 40%
::-moz-placeholder
	color $basefontcolor - 40%
:-ms-input-placeholder
	color $basefontcolor - 40%

$basefontcolor = #ccc;
$baseBackColor = white

$line-height = 32px;
$themeColor = $color;
$imagepath = './../images/';
$borderradius = 2px;
$inputoutlinecolor = $color + 40%;
$combox-icon = '3';
$border-color = #ccc;
.comsys-box-window
	.comsys-box-content
		color #333
		*
			color #333
		input
		textarea
			background $baseBackColor
			vertical-align middle
			padding 5px
			border-radius $borderradius
			transition box-shadow .1s ease , border .1s ease
			&:focus
				outerlineset($inputoutlinecolor)
		input
			height $line-height
			border 1px solid $border-color
			display inline-block
			width 100%
		textarea
			margin-top 10px
			margin-bottom 6px
			border 1px solid $border-color
			display inline-block
			width 100%
			resize none;