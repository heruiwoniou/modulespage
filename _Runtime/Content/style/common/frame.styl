for index in 1..5
	.bcolor{index}
		background $color + index
	.color-{index}
		color $color + index
a
	color #3cb1e7
.header
	height 100px
	background white
	position relative
	.container
		position relative
	.header-left
		line-height 100px
		white-space nowrap
		margin-right 160px
		font-size 0px
		.logo
		h1
		span
			margin-right 10px
			inlineBlock()
		.logo
			background url('./../images/logo-horizontal.png') no-repeat center center
			height 60px
			width 225px
		span
			color #bcb5c9
		h1
			color #3c3c3c
			font-size 24px
	.header-right
		width 160px
		height 100px
		position absolute
		right 0
		top 0
		line-height 100px
		h1
			inlineBlock()
			line-height 2
			text-align left
			span
			a
				margin-right 10px
				color #1f1d20
.footer
	background #3e3c38
	color #8e8e8e

//img-container
.img-container
	font-size 0
	img
		display inline-block
		vertical-align middle
		transition opacity .2s ease
		opacity 0
	&.loaded
		img
			opacity 1

.section-container
	padding 10px
	&.lr
		padding-top 0
		padding-bottom 0
	&.tb
		padding-left 0
		padding-right 0
for index in 1..6
	.section-container-{10 + index * 5}
		padding 10px + index * 5px
		&.lr
			padding-top 0
			padding-bottom 0
		&.tb
			padding-left 0
			padding-right 0

[v-cloak]
	display none