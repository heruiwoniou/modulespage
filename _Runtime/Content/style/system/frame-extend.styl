$navHeight=84px;
$hoverColor=#1bb869;

/*general*/
html
	*
		color $fontBaseColor
.header
	padding-top $navHeight
	.nav
		.container
			position relative
		position fixed
		z-index 1
		background #fff
		top 0
		width 100%
		height $navHeight
		.logo
			width 229px
			height $navHeight
			position absolute
			left 0px;top 0px
			background url(images/logo.png)
		.menu
			margin-left 229px
			margin-right 200px
			height $navHeight
			ul.ul-menu
				text-align right
				font-size 0px
				&>li
					display inline-block;
					&>a
						display inline-block
				li
					height $navHeight
					a
						font-size 16px
						color $fontBaseColor
						font-weight bold
						text-align center
						min-width 110px
						line-height $navHeight
						height $navHeight
					&.select
					&:hover
						a
							text-decoration none
					&:hover
						a
							color $fontBaseColor
						background $hoverColor + 85%
					&.select
						background $hoverColor
						a
							color #fff
		.person
			height $navHeight
			position absolute
			top 0px;right 0px
			width 200px
			text-align right;
			.login
				display inline-block;
				height $navHeight
				line-height $navHeight
	.banner
		position relative
.footer
	background #282828
	text-align center
	line-height 76px
	color #c1bcb3;

