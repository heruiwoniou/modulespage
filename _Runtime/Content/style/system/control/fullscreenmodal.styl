.full-screen-modal
	position fixed
	background white
	z-index 5000
	height 100%
	width 100%
	top 0
	left 0
	line-height 1
	padding-top .5%
	.modal-frame
		position relative
		vertical-align middle
		top .2%
		z-index 1
		margin-left .5%
		height 99%
		width 99%
		background white
		box-shadow 0 0 10px 0px black + 50%
	.modal-menu
		position absolute
		background $BColor3
		top 1px
		left 1px
		bottom 1px
		width 77px
		a
			position relative
			box-sizing content-box
			display inline-block
			text-align center
			line-height 78px
			height 78px
			width 77px
			text-align center
			i
				position absolute
				width 29px
				height 29px
				display block
				left 50%
				margin-left -15px
				top 10px
		a
			b
				width 100%
				text-align center
				display inline-block
				position absolute
				font-weight normal
				left 0px
				top 50px
				color white
				line-height 1
			&:hover
			&.select
				background $BColor3 - 10%
				&:before
					content ''
					width 5px
					height 50px
					background $Color3 - 20%
					display block
					position absolute
					left 0px
					top 14px
			&.select
				background $BColor3 - 20%
				&:before
					background $Color3
		div.back
			position relative
		a.view
			i
				background url('images/modal-view.png') no-repeat;
		a.analyze
			i
				top 13px
				background url('images/modal-analyze.png') no-repeat;
	.modal-right-frame
		height 100%
		width 100%
		padding-left 78px
		.modal-body
			position relative
			height 100%
			.modal-content
				position absolute
				top 1px
				left 2px
				right 2px
				bottom 2px
				overflow hidden
				background $BackColor
		&.custom
			padding-left 0
			.modal-content
				left 1px
				right 1px
				bottom 1px
	div.back
		position absolute
		z-index 9999;
		left 0
		top 0
		box-sizing content-box
		display inline-block
		text-align center
		line-height 78px
		height 78px
		width 77px
		background $Color3
		cursor pointer
		i
			position absolute
			display block
			left 50%
			width 34px
			height 27px
			top 50%
			margin-top -13px
			margin-left -15px
			background url('images/modal-back-arrow.png') no-repeat
		&:hover
			background $Color3 + 20%
		&.custom
			left 1px
			top 1px