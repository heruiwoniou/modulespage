//swbanner
$speed=1s;

.scroll-column
	position relative
	.s-left,.s-right
		display none;
		position absolute
		top 0px
		width 40px
		font-size 3em
		transition transform .2s ease
		text-align center
		&:before
			content ''
			display inline-block
			width 14px
			height 24px
			vertical-align middle
		&:hover
			transform scale(1.2,1.2)
	.s-content
		margin 0 40px
		&>*
			display none
		&>*:first-child
			display block
	.s-left
		left 0
		&:before
			background url(images/arrow-white-left.png) no-repeat center
	.s-right
		right 0
		&:before
			background url(images/arrow-white-right.png) no-repeat center
	&.created
		.s-left,.s-right
			display block
		.s-content
			position relative
			overflow hidden
			margin 0 40px
			&>*
				position absolute
				top 0
				left 0
				display block
				opacity 0
			&>*.animate
				transition opacity .5s,left $speed,right $speed
			&>*.a-left
				left -100%
				right 100%
			&>*.a-right
				left 100%
				right -100%
			&>*.a-current
				z-index 1
				opacity 1
				left 0
				right 0
	&.b
		.s-left
			left 0
			&:before
				background url(images/arrow-blue-left.png) no-repeat center
		.s-right
			right 0
			&:before
				background url(images/arrow-blue-right.png) no-repeat center
