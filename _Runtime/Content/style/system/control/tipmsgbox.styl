.msg-box
	position static
	display inline-block
	line-height 0
	vertical-align top
	outline 0
	margin-left 5px
	margin-top 3px
	&.msgfadein-transition
		transition all .3s ease
		margin-left 5px
		opacity 1
	&.msgfadein-enter
	&.msgfadein-leave
		margin-left 20px
		opacity 0
	.msg-wrap
		position absolute
		border-radius 2px
		margin-left 6px
		border 1px solid #ffbb76
		background #fffcef
		padding 1px 6px
		box-shadow 0 1px 3px #ccc
	.n-msg
		display inline-block
		line-height 16px
		margin-left 1px
		font-size 12px
		min-width 80px
		&:before
			position relative
			margin-right 5px
			top 1px
			iconfont()
			vertical-align baseline
			content 'r'
			color $Color7
	.n-arrow
		position absolute
		width 6px
		height 12px
		top 4px
		left -8px
		b
		i
			position absolute
			left 0
			top 0
			border 0
			margin 0
			padding 0
			overflow hidden
			font-weight 400
			font-style normal
			font-size 12px
			font-family serif
			line-height 14px
		b
			color #ffbb76
			text-shadow 0 0 2px #ccc
			left 1px
		i
			color #fffcef
			left 2px
			text-shadow none