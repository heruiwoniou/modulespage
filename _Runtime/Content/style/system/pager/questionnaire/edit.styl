@import './edit/StaticHeader.styl';
@import './edit/SectionGroup.styl';
@import './edit/ChoiceQuestion.styl';
@import './edit/PicChoiceQuestion.styl';
@import './edit/QuestionResponse.styl';
@import './edit/TabBar.styl';
@import './edit/GradeQuestion.styl';
@import './edit/MatrixChoiceQuestion.styl';
@import './edit/UnmixedText.styl';

control-insert()
	.insert-modal
		ChoiceQuestionInsert();
		PicChoiceQuestionInsert();
		GradeQuestionInsert();
		MatrixChoiceQuestionInsert();
questionnaireEdit()
	.edit
		.control-item
			position relative
			border 1px solid $basecolor - 5%
			background white
			padding 65px 30px 20px 30px
			min-height 50px
			h2.control-title
				position absolute
				top 0
				left 0
				right 0
				height 45px
				line-height 45px
				text-indent 15px
				border-bottom 1px solid $basecolor - 5%
			&~.border-top
				width 16px
				position absolute
				box-sizing content-box
				border-bottom 1px solid $basecolor - 5%
				height 10px
				background #ececec
				line-height 0
				font-size 0
				top -3px
				left -6px
				transform rotate(-45deg)
			&.selectchild
			&:hover
				border-color $basecolor - 20%
				&~.border-top
					border-bottom-color $basecolor - 20%
				.border-top
					background #f8f8f8
			&.selectchild
				.select
					&~.accept .pointer
						background #f8f8f8
			&.select
				//box-shadow 0 0 5px 0 #ccc - 40%
				border-color $basecolor - 40%//$basecolor - 40%
				&:hover
					border-color $basecolor - 40%//transparent
				&~.accept
					position relative
					width 100%
					height 10px
					margin 0 auto
					.pointer
						display block
						background #ececec
						position absolute
						width 30px
						height 30px
						top -10px
						left -20px
						z-index 1
						transform rotate(45deg)
						.inner-border-top
							height 1px
							line-height 0
							font-size 0
							width 16px
							position absolute
							border-top 1px solid #929292
							top -1px
							left 7px
						.add
							height 21px
							width 21px
							line-height 20px
							margin 5px
							text-align center
							background #3399FF
							&:before
								position relative
								font-size 20px
								color white
								top -7px
								left -1px
								iconfont()
								content 'M'
				&~.accept:before
					border-bottom-style solid
					border-bottom-color #3399FF !important
		.control-static
		.control
			width 100%
		.control-static
			margin-top 10px;
		.accept
			position relative
			width 100%
			height 10px
			margin 0 auto
				&:before
					border-bottom-color blue
			.pointer
				display none
			&.draging
				&:before
					border-bottom-style solid
			&:before
				content ''
				height 5px
				width 100%
				display block
				border-bottom 1px dotted transparent
			&.draging
				b
					animation pointer-animate .2s
					z-index 1
					position absolute
					content ''
					width 0
					height 0
					left -15px
					top -4px
					transform rotate(45deg);
					border-color $BackColor transparent $BackColor $Color3
					border-style solid
					border-width 3px 0px 3px 20px
		.StaticHeader
		.SectionGroup
		.ChoiceQuestion
		.PicChoiceQuestion
		.UnmixedText
		.QuestionResponse
		.GradeQuestion
		.MatrixChoiceQuestion
			input[type=text]
			input[type=number]
			textarea
				border 1px solid #ccc
				line-height 19px
				box-sizing border-box
				font-family "微软雅黑","宋体","Simsun","Trebuchet MS", "Helvetica", "Arial", "Verdana", "sans-serif";
				font-size 14px;
			.edittitle
				margin 5px 0
				line-height 19px
				height 19px
				input
					width 100%
					padding-left 1px
					padding-right 1px
			.content-area
				h1
					cursor pointer
					padding-left 35px
					margin 7px 0 3px 0
					line-height 19px
					position relative
					textHidden();
				p
					padding-left 3px
					padding-top 3px
					min-height 120px
					line-height 19px
					word-break break-all
		StaticHeader();
		SectionGroup();
		ChoiceQuestion();
		PicChoiceQuestion();
		QuestionResponse();
		TabBar();
		GradeQuestion();
		MatrixChoiceQuestion();
		UnmixedText();
		.control-panel
		.control-panel-sub
			font-size 0px
			background white
			position absolute
			line-height 45px
			top 0
			left 0
			right 0
			border-bottom 1px solid $basecolor - 20%
			&>*
				display inline-block
				vertical-align middle
			span.split
				width 1px
				height 45px
				background $basecolor - 20%
			a
				text-align center
				min-width 80px
				&:hover
					background #ebebeb
				&.select
					background #ebebeb
					cursor default
					text-decoration none
				&:before
					content ''
					width 24px
					height 24px
					display inline-block
					vertical-align middle
			.inline-container
				height 100%
				span.split
				&>*
					display inline-block
					vertical-align top
					white-space: nowrap;
				float right
			a.icon-bold
			a.icon-color
			a.icon-check
			a.icon-radio
			a.single-line
			a.multi-line
			a.icon-must
			a.icon-five
			a.icon-self
			a.icon-star
			a.icon-letter
			a.icon-five
			a.icon-self
			a.icon-star
			a.icon-char
			a.icon-slider
			a.icon-choose
			a.icon-input
			a.icon-logic
				position relative
				&:before
					position relative
					top -2px
					width 13px
					height 13px
					margin-right 5px
			a.icon-bold
				&:before
					background url('images/icon-bold.png') no-repeat;
			a.icon-letter
				&:before
					background url('images/icon-letter.png') no-repeat;
			a.icon-color
				&:before
					background url('images/icon-color.png') no-repeat;
			a.icon-check
				&:before
					background url('images/icon-check.png') no-repeat;
			a.icon-radio
				&:before
					background url('images/icon-radio.png') no-repeat;
			a.delete
				&:before
					background url('images/ash-binpng.png') no-repeat;
			a.single-line
				&:before
					background url('images/single-line.png') no-repeat;
			a.multi-line
				&:before
					background url('images/multi-line.png') no-repeat;
			a.icon-five
				&:before
					background url('images/icon-five.png') no-repeat;
			a.icon-self
				&:before
					width 20px;
					background url('images/icon-self.png') no-repeat;
			a.icon-star
				&:before
					background url('images/icon-star.png') no-repeat;
			a.icon-char
				&:before
					background url('images/icon-char.png') no-repeat;
			a.icon-must
			a.icon-slider
			a.icon-choose
			a.icon-input
			a.icon-logic
				&:before
					iconfont()
					position relative
					top: -8px;
					font-size 16px;
					left: -2px;
			a.icon-must
				&:before
					content "\e000"
				&.select
					&:before
						content "\7e"
			a.icon-slider
				&:before
					content "\66"
			a.icon-choose
				&:before
					content "\52"
			a.icon-input
				&:before
					content "\6c"
			a.icon-logic
				&:before
					content "\e02b"
			a.icon-color
				b
					height 3px
					position absolute
					width 60%
					left 20%
					display block
					top 35px
			a.no-icon
				&:before
					content none
			a.no-hover
				&:hover
					background white
					cursor default
					text-decoration none;
		//子菜单样式
		.control-panel-sub
			background #ebebeb
			border-top 1px solid $basecolor - 20%
			height 35px;
			line-height 35px;
			top 45px;
			input
				width 50px;
				margin 0 10px;
				line-height 22px !important;
				text-align center
			span.split
				height 32px;
				background transparent
			a
				height 32px;
				line-height 32px;
			a:hover
				background transparent
			a.select
				color #d05e4b
				background-color transparent
				&.icon-star:before
					background url('images/icon-star-select.png') no-repeat;
				&.icon-letter:before
					background url('images/icon-letter-select.png') no-repeat;
				&.icon-char:before
					background url('images/icon-char-select.png') no-repeat;
			a.no-hover
				&:hover
					background transparent
					cursor default
					text-decoration none;
	&.begin
		.ui-draggable-dragging .accept:before
			border-bottom-color transparent
		.accept:before
			border-bottom-color $Color3
		//控制条
