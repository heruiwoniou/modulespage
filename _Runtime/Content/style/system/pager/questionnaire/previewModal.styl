previewModal()
	.preview-modal
		position fixed
		top 80px
		min-width 840px
		width 85%
		right 0
		bottom 0
		background white - 2%
		box-shadow 0 0 5px 1px #ccc
		z-index 2
		.preview-container
			position absolute
			top 0
			left 0
			right 0
			bottom 0
			iframe
				width 100%
				height 100%;
		.preview-close
			position absolute
			z-index 1
			height 30px
			width 30px;
			left 10px
			top 10px
			line-height 30px;
			text-align center
			font-size 0
			&:before
				iconfont()
				position relative
				content 'Q'
				font-size 30px
				line-height 1;
				left -1.5px
				top -1px
				transition color .2s ease
				color $fontSmallColor
			&:hover
				&:before
					color $fontBaseColor