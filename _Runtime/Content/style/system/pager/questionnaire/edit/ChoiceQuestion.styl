ChoiceQuestion()
	.ChoiceQuestion
		.rowitems
			width 40px
			text-align center;
		.edititems-tip
			height 25px
			padding-left 2px
			line-height 25px
		.content-area
			label
				display inline-block
				width 100%
				vertical-align middle
				line-height 19px
				textHidden()
				input
					position relative
					top 1px
			table
				table-layout fixed
				box-sizing content-box
				margin 1px 0 5px 0
				border-collapse collapse
				width 100%
				td
					height 19px
					line-height 19px
ChoiceQuestionInsert()
	.ChoiceQuestion
		.option
			line-height 30px;