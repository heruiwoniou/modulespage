$basecolor=#f3f3f3;

$control-samll-width=160px;

@keyframes pointer-animate
	0%
		opacity 0
		left 200px
	100%
		opacity 1
		left -4px

.demo,.questionnaire
	frame-base(78px,0);
	background $BackColor
	position relative
	.header
		height 78px
		.nav
			height 78px
		.menu
			height 78px
			text-align center
			ul.ul-menu
				li
					height 78px
					a
						line-height 78px
						height 78px
		.person
			height 78px
			.login
				height 78px
				line-height 78px
	.left
		position fixed
		padding-top 78px;
		left 0
		top 0
		bottom 0px
		width 200px
		text-align left
		div.line
			height 1px
			font-size 0px;
			overflow hidden;
			background #c0c0c0;
			width $control-samll-width
			margin 0 auto;
		h1
		h2
			line-height 50px
			font-size 24px;
			text-indent 20px
		h2
			font-size 20px
		.control-small
			box-shadow none
	.control-small
		text-indent 50px
		margin-bottom 10px
		float left
		background white
		height 40px;
		line-height 40px
		text-align left;
		width $control-samll-width;
		cursor pointer
		position relative
		box-shadow 0 0 5px 0 #ccc
		&:before
			position absolute
			content ''
			width 43px
			height 40px
			left 0
			top 0
			background-color #d8d8d8
		&[data-type*=ChoiceQuestion]
			&:before
				background #d8d8d8 url('images/ChoiceQuestion.png') no-repeat
		&[data-type*=PicChoiceQuestion]
			&:before
				background #d8d8d8 url('images/PicChoiceQuestion.png') no-repeat
		&[data-type*=GradeQuestion]
			&:before
				background #d8d8d8 url('images/GradeQuestion.png') no-repeat
		&[data-type*=MatrixChoiceQuestion]
			&:before
				background #d8d8d8 url('images/MatrixChoiceQuestion.png') no-repeat
		&[data-type*=QuestionsAndAnswersQuestion]
			&:before
				background #d8d8d8 url('images/QuestionsAndAnswersQuestion.png') no-repeat
		&[data-type*=Section]
			&:before
				background #d8d8d8 url('images/Section.png') no-repeat
		&[data-type*=UnmixedText]
			&:before
				background #d8d8d8 url('images/UnmixedText.png') no-repeat
	.left-control-container
		width $control-samll-width
		margin 0 auto;
		&:after
			clear()
	.right-control-container
		padding-bottom 20px;
		width 80%
		margin 0 auto
	.control-static
	.control
		width 100%
	.right
		position fixed
		padding-top 78px
		top 0
		bottom 0
		left 210px
		right 10px
		.accept
			position relative
			width 100%
			height 10px
			margin 0 auto
				&:before
					border-bottom-color blue
			&.draging
				&:before
					border-bottom-style solid
			&:before
				content ''
				height 5px
				width 100%
				display block
				border-bottom 1px dotted transparent
			&.draging
				b
					animation pointer-animate .2s
					z-index 1
					position absolute
					content ''
					width 0
					height 0
					left -15px
					top -4px
					transform rotate(45deg);
					border-color $BackColor transparent $BackColor $Color3
					border-style solid
					border-width 3px 0px 3px 20px
		&.begin
			.ui-draggable-dragging .accept:before
				border-bottom-color transparent
			.accept:before
				border-bottom-color $Color3
		.header-container
			width 80%
			margin 0 auto
		.questions-title
			padding 0 10px
			font-size 0px;
			margin 10px auto
			width 100%
			height 45px;
			line-height 45px;
			background #fff
			.inline-container
				float right
	.control-item
		position relative
		border 1px solid $basecolor - 5%
		background white
		padding 55px 10px 10px 10px
		min-height 50px
		h2.control-title
			position absolute
			top 0
			left 0
			right 0
			height 45px
			line-height 45px
			text-indent 5px
			//background #ccc + 5%
			border-bottom 1px solid $basecolor - 5%
		&.select
			//box-shadow 0 0 5px 0 #ccc - 40%
			border-color $basecolor - 40%//$basecolor - 40%
			&:hover
				border-color $basecolor - 40%//transparent
		&:hover
			border-color $basecolor - 20%
	//控制条
	.control-panel
		font-size 0px
		background white
		position absolute
		height 45px
		line-height 44px
		top 0
		left 0
		right 0
		border-bottom 1px solid $basecolor - 20%
		&>*
			display inline-block
			vertical-align middle
		span.split
			width 1px
			height 100%
			background $basecolor - 20%
		a
			text-align center
			min-width 80px
			&:hover
				background #ebebeb
			&.select
				background #ebebeb
				cursor default
				text-decoration none
			&:before
				content ''
				width 24px
				height 24px
				display inline-block
				vertical-align middle
		.inline-container
			height 100%
			span.split
			&>*
				display inline-block
				vertical-align top
				white-space: nowrap;
			float right
		a.icon-bold
		a.icon-color
		a.icon-check
		a.icon-radio
			&:before
				position relative
				top -2px
				width 13px
				height 13px
				margin-right 5px
		a.icon-bold
			&:before
				background url('images/icon-bold.png') no-repeat;
		a.icon-color
			&:before
				background url('images/icon-color.png') no-repeat;
		a.icon-check
			&:before
				background url('images/icon-check.png') no-repeat;
		a.icon-radio
			&:before
				background url('images/icon-radio.png') no-repeat;
		a.delete
			&:before
				background url('images/ash-binpng.png') no-repeat;
	.StaticHeader
	.SectionGroup
	.ChoiceQuestion
		input[type=text]
		textarea
			border 1px solid #ccc
			line-height 19px
			box-sizing border-box
			font-family "微软雅黑","宋体","Simsun","Trebuchet MS", "Helvetica", "Arial", "Verdana", "sans-serif";
			font-size 14px;
		.edittitle
			margin 5px 0
			line-height 19px
			height 19px
			input
				width 100%
				padding-left 1px
				padding-right 1px
		.content-area
			h1
				padding-left 2px
				margin 7px 0 3px 0
				line-height 19px
				height 19px
	.StaticHeader
		.content-area
			.background
				background white - 5%
				width 165px
				height 165px
				float left
				margin-right 10px
			.text-content
				padding-left 175px;
			.edittitle
				height 40px;
				line-height 40px;
				input
					height 40px;
					line-height 40px;
					font-size 30px;
			h1
				margin 5px 0
				font-size 30px;
				line-height 40px;
				height 40px;
			p
				padding-left 3px
				padding-top 6px
				min-height 120px
	.SectionGroup
		background $basecolor + 40%
		&.no-children
			.content-area
				height 100px
		.accept
			&.draging
				b
					border-color $basecolor + 40% transparent $basecolor + 40% $Color3
	.ChoiceQuestion
		.rowitems
			width 40px
			text-align center;
		.edititems-tip
			height 25px
			padding-left 2px
			line-height 25px
		.content-area
			label
				vertical-align middle
				line-height 19px
				input
					position relative
					top 1px
			table
				box-sizing content-box
				margin 1px 0 5px 0
				border-collapse collapse
				width 100%
				td
					height 19px
					line-height 19px
@media all and (max-width: 1024px)
	.demo,.questionnaire
		.right
			.right-control-container
				width 100%
			.header-container
				width 100%
