$basecolor=#f3f3f3;
.demo
	background #f3f3f3
	position relative
	.left
		min-height 100%
		position absolute
		left 0
		top 0
		width 300px
		text-align right
		border-right 1px solid #ccc
	.right
		min-height 100%
		margin-left 310px
	.left-control-container
		width 200px
		margin 0 auto;
		&:after
			clear()
	.right-control-container
		width 80%
		margin 0 auto
	.control-small
		margin-top 10px
		float left
		background white
		height 50px;
		line-height 50px
		text-align center;
		width 200px
		border 1px solid #ccc - 20%
		cursor pointer
	.control
		width 100%
	.accept
		width 100%
		height 10px
		margin 0 auto
		&.begin
			&:before
				border-bottom-color blue
		&.draging
			&:before
				border-bottom-width 2px
				border-bottom-color blue
		&:before
			content ''
			height 5px
			width 100%
			display block
			border-bottom 1px dotted transparent
	.control-item
		position relative
		border 1px solid $basecolor - 5%
		background white
		padding 35px 10px 10px 10px
		min-height 50px
		h2.control-title
			position absolute
			top 0
			left 0
			right 0
			height 25px
			line-height 25px
			text-indent 5px
			//background #ccc + 5%
			border-bottom 1px solid $basecolor - 5%
		&.select
			box-shadow 0 0 5px 0 #ccc - 40%
			border-color $basecolor - 40%
		&:hover
			border-color $basecolor - 40%
	//控制条
	.control-panel
		position absolute
		height 25px
		line-height 20px
		padding 0 2px
		top 0
		left 0
		right 0
		//background #ccc + 5%
		border-bottom 1px solid $basecolor - 20%
		&>*
			margin-right 2px
			display inline-block
			vertical-align middle
		span.split
			width 1px
			height 100%
			background $basecolor - 20%
			margin-left -3px
			margin-right -1px
		.inline-container
			height 100%
			span.split
				margin-right 2px
				margin-left 0px;
			&>*
				margin-right 0
				display inline-block
				vertical-align middle
				white-space: nowrap;
			float right
	.Group
	.ChoiceQuestion
		button
			outline none
			border 1px solid #ccc
			height 19px
		input[type=text]
			border 1px solid #ccc
		input
		textarea
			line-height 19px
			box-sizing border-box
			font-family "微软雅黑","宋体","Simsun","Trebuchet MS", "Helvetica", "Arial", "Verdana", "sans-serif";
			font-size 14px;
		.edittitle
			margin 5px 0
			line-height 19px
			height 19px
			input
				width 100%
		.content-area
			h1
				margin 5px 0
				line-height 19px
				height 19px
	.Group
		background $basecolor + 40%
		&.no-children
			.content-area
				height 100px
	.ChoiceQuestion
		.rowitems
			width 40px
			text-align center;
		.edititems-tip
			height 25px
			line-height 25px
		.content-area
			label
				vertical-align middle
				line-height 19px
				input
					position relative
					top 1px
			table
				box-sizing content-box
				margin 1px 0 5px 0
				border-collapse collapse
				width 100%
				td
					height 19px
					line-height 19px