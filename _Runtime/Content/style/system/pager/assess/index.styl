body.assess
	frame-base(80px,0);
	background $BackColor
	position relative
	.header
		height 80px
		padding-top 80px
		.nav
			height 80px
			z-index 2
		.menu
			height 78px
			text-align center
			ul.ul-menu
				li
					height 78px
					a
						line-height 78px
						height 78px
		.person
			height 78px
			.login
				height 78px
				line-height 78px
	.body>.FrameLeftRightControl>.FrameBar
		z-index 1
		width 10px
		cursor w-resize
		background transparent
		&:before
			display block
			position absolute
			left 50%
			margin-left -1px
			top 0px
			bottom 0px
			width 1px
			content ''
			background #ececec
			border-right 1px solid white;
			box-sizing content-box
		&.ui-draggable-dragging
			&:before
				background #ccc
	.body>.FrameLeftRightControl>.FrameRight
		padding-top 1px
	.label-nav-text
		margin 10px 10px 0 10px
		line-height 40px
		font-size 16px
	.view-table-container
		position absolute
		top 62px
		left 10px
		right 10px
		bottom 10px
	.label-nav
		margin 10px 10px 0 10px
		line-height 40px
		li
			cursor pointer
			line-height 40px
			display inline-block
			border-bottom 2px solid transparent
			font-size 16px
			padding 0 5px
		li.select
			border-color $Color3
	.label-body
		position absolute
		top 62px
		left 10px
		right 10px
		bottom 10px
		table.field-table
			a.add
				color $Color3
		.field-wrap
			.comsys-base
				height 35px
				line-height 35px
		.x-scroll-mCustomScrollbar
			margin 0 5px
			.mCSB_scrollTools
				top 0
			.mCSB_container
				top auto
				margin-top 16px
				margin-bottom 0
				&.mCS_x_hidden
					margin-top 0
					.ztree
						margin-top 16px
		.field-table-container
			margin 0 5px
			margin-top 16px
.view-table
	border-collapse collapse
	width 100%
	tr
		th
		td
			text-align center
			border 1px solid #ccc
			box-sizing content-box
			line-height 1.5
			padding 5px 0
			height 100%
			div.text-wrap
				padding 0 5px
				textHidden()
				input[type='text']
					width 100%
		th
			background #ccc + 50%
		td
			table
				table-layout fixed
				width 100%
				margin-bottom -1px
				border-collapse collapse
				tr:first-child
					td
						border-top-width 0px
						&:first-child
							border-left-width 0px
				tr
					td:last-child
						border-right 0px
			&.empty
				border-right 0px
			&.last-col
				border-right-width 0px
			&.noPadding
				padding 0px
	&>tbody>tr>td
		padding 0