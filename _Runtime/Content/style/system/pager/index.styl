body.index
	.banner
		.container
			position relative
		height 608px
		/* @meta {"spritesheet": {"include": false}} */
		background url(images/banner.jpg) no-repeat center 0px
		.button
			position absolute
			top 400px;
			left 50%;
			margin-left -55px
		.banner-text
			text-align center
			h1
				color white
				font-size 3em
				line-height 5
			p
				font-size 1.1em
				line-height 2
				color white
	.body
		.section-1
			height 475px
		.section-2
			/* @meta {"spritesheet": {"include": false}} */
			background url(images/banner-background.jpg) no-repeat center 0px
			height 597px
		.section-3
			height 670px
	.section-1
		h1
			i
				width 19px;height 21px
				vertical-align middle
				background url(images/icon-1.png) no-repeat
				display inline-block
				position relative
				top -2px
				left -5px
			margin 60px 0px
			text-align center
			font-size 1.5em
			span
				color $fontImportantColor
				font-size 1.1em
				padding 0 10px
		.viwer-column
			position relative
			.viwer-left
				top 70px
				font-size 1.5em
				padding 20px 0px
				text-align center
				line-height 40px
				background $Color3
				width 45px
				position absolute
				left 0px
				color #fff
				&:after
					content ''
					display block
					width 0
					height 0
					border 10px solid transparent
					border-right-color #f8f8f8
					position absolute
					right 0
					top 50%
					margin-top -10px
			.viwer-right
				background #f8f8f8
				margin-left 45px
				padding 20px
				.col-3
					text-align center
				.item
					display inline-block
					h2
						font-size 1.1em
						line-height 60px
						color $Color3
					p
						color #7c7c7c;
	.section-2
		position relative
		.question
			padding 40px 0
			text-align center
			h1
				line-height 1.3
				color $Color5
				font-size 1.8em
			h2
				line-height 1.5
				color #f2e4ca
				font-size 1em
			&:after
				content ''
				display inline-block
				width 0;height 0
				border 5px solid transparent
				border-top-width 10px
				border-top-color $Color5;
		.item
			h1
				color white
				font-size 1.3em
				line-height 1.5
				textHidden()
			h2
				color white
				margin-top 40px
				line-height 2
			p
				color white - 10%
				margin 15px 0
				line-height 1.2
			.line
				height 1px
				background #a6a5a4
				margin 5px 0
			.button
				margin-top 50px
			.top
				p
					height 38px
					overflow hidden
					text-overflow ellipsis
				.index
					width 76px;height 84px
					float left
					text-align center
					margin-right 10px
					h3
						color white
						font-size 1.8em
						line-height 40px
						margin-top 13px
					h4
						color white
						font-size 1em
					&.i1
						background:url('images/color-index-1.png') no-repeat center;
					&.i2
						background:url('images/color-index-2.png') no-repeat center;
					&.i3
						background:url('images/color-index-3.png') no-repeat center;
					&.i4
						background:url('images/color-index-4.png') no-repeat center;
	.section-3
		.question
			padding 40px 0
			text-align center
			h1
				line-height 1.3
				color $Color2
				font-size 1.8em
			h2
				line-height 1.5
				color #c6ebea
				font-size 1em
			&:after
				content ''
				display inline-block
				width 0;height 0
				border 5px solid transparent
				border-top-width 10px
				border-top-color $Color2;
		.col-3
			text-align center
			.item
				display inline-block
				text-align left
		.item
			h1
				color $Color2
				font-size 1.2em
				line-height 1.5
				textHidden()
			h2
				color $Color2
				margin-top 40px
				line-height 2
			p
				color $Color2
				margin 15px 0
				line-height 1.2
			.line
				height 1px
				background #a9edeb
				margin 5px 0
			.button
				margin-top 50px
			.top
				width 224px;height 128px
				padding 10px
				h1,h2,p
					color white
				p
					margin-top 4px
					height 38px
					overflow hidden
					text-overflow ellipsis
				a
					color white
					padding 5px 40px 5px 17px;
					margin-left 3px;
					line-height 1.1
				span
					color white
					float right
				&.p1
					/* @meta {"spritesheet": {"include": false}} */
					background:url('images/color-panel-1.jpg') no-repeat center;
				&.p2
					/* @meta {"spritesheet": {"include": false}} */
					background:url('images/color-panel-2.jpg') no-repeat center;
				&.p3
					/* @meta {"spritesheet": {"include": false}} */
					background:url('images/color-panel-3.jpg') no-repeat center;
				&.p4
					/* @meta {"spritesheet": {"include": false}} */
					background:url('images/color-panel-4.jpg') no-repeat center;
				&.p5
					/* @meta {"spritesheet": {"include": false}} */
					background:url('images/color-panel-5.jpg') no-repeat center;