body.state-analyze
	padding 20px 20px 20px 20px
	background $BackColor
	.container
		margin-bottom 20px
		max-width inherit
	.container:last-child
		margin-bottom 0px
	.section-1
		.question-panel
			h1
				line-height 35px
				text-indent 10px
			ul
				padding 0 10px
				li
					line-height 25px
					textHidden()
					span
						color $Color7
		.FrameRight
			.SmallPanelControl
				border-top 10px solid white
				padding-bottom 10px
				&:first-child
					border-top-width 0px
		.list-grid
			th
				background #e1f0f7
			tr.total
				background $BackColor
		.table-grid
			max-width 1269px
		.table-grid
			.row
				margin-top 10px
			.rows
				perspective: 2000px;
				&.setting
					.column
						transform scaleZ(10) rotateX(0deg)  translateZ(15px)
						.command
							top 0px
			.column
				height 150px;
				box-shadow 0 0 5px 0 #ccc;
				transition all .2s ease
				background white
				overflow hidden
				&:hover
					box-shadow 0 2px 10px 0px #ccc
					transform scale3d(1,1.1,1) rotateX(20deg) translateZ(10px)
				span.thumbtack
					transform rotate(45deg)
					content ''
					display block
					position absolute
					z-index 1
					right -40px
					top -40px
					width 80px
					height 80px
					background red
					cursor pointer
					&:after
						transform rotate(-45deg)
						position absolute
						z-index 2
						bottom 13px
						left 32px
						display block
						width 18px
						height 4px
						background url(images/ellipsis.png) no-repeat
						content ''
						cursor pointer
		.column
			position relative
			h1
				cursor pointer
				position relative
				font-size 18px
				line-height 1.4
				padding-left 10px;
				padding 20px 50px 0 20px
				margin-bottom 13px
				height 50px
				box-sizing content-box
				overflow hidden
				&:before
					position absolute
					left 0px
					content ''
					display block
					height 50px
					width 7px
			p
				color $fontSmallColor
				padding-left 20px
			.column-bottom
				position absolute
				bottom 0px
				width 100%
				height 40px;
				background $BackColor + 50%
				line-height 40px;
				padding 0 20px
				overflow hidden
				span.left
					floatLeft()
				span.right
					color $fontSmallColor
					floatRight()
			&.new
				span.thumbtack
					display none
				/* @meta {"spritesheet": {"include": false}} */
				background url(images/new-background2.jpg) no-repeat center
				line-height 150px;
				text-align center
				a
					text-decoration none
					display inline-block
					width 100%
					font-size 20px
					color white
					&:before
						iconfont()
						content 'L'
						vertical-align baseline
			&.c1
				h1
					color $Color3
					&:before
						background $Color3
				span.left
					color $Color3
				span.thumbtack
					background $Color3 + 50%
			&.c2
				h1
					color $Color6
					&:before
						background $Color6
				span.left
					color $Color6
				span.thumbtack
					background $Color6 + 50%
			&.c3
				h1
					color $Color7
					&:before
						background $Color7
				span.left
					color $Color7
				span.thumbtack
					background $Color7 + 50%
			.command
				position absolute
				transition top .5s ease
				top 150px
				width 100%
				height 100%
				text-align center
				line-height 150px
				&:before
					content ''
					position absolute
					height 100%
					width 100%
					display block
					background black
					opacity 0.8
				a
					vertical-align middle
					position relative
					z-index 3
					height 40px
					display inline-block
					text-align center
					width 40px
					text-decoration none
					border-radius 100%
					transition margin-top .2s ease
					&:hover
						margin-top -5px;
					b
						position absolute
						left 0
						top 50%
						color white
						line-height 1
						width 100%
					i
						position absolute
						left 50%
						top 10%
						margin-left -6px
						content ''
						width 12px
						height 13px
						display block
					&.share
						i
							background url('images/share.png') no-repeat;
					&.copy
						i
							background url('images/copy.png') no-repeat;
					&.delete
						i
							background url('images/del.png') no-repeat;
					&.edit
						i
							background url('images/edit-pen.png') no-repeat;
					&.export
						i
							background url('images/export-big.png') no-repeat;