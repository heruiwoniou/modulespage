.new-activity
	overflow-x hidden
	position relative
	&>.no-m-container
		padding 10px 20px
	.part-one
	.part-two
	.part-three
	.part-four
		position absolute
		top 0
		left 0
		width 100%
	h1
		font-size 16px
		font-weight bold
	.list-item
		li
			width 32%
			margin 10px .6%
			p
				a
					padding 0 2px !important
					&:before
						margin-right 5px !important