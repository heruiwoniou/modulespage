@import './../setting.styl';
@import './../base/core/common.styl';
.content-list-box
  width 100%
  height auto
  overflow hidden
  padding-bottom 30px

.list
  width auto
  height 136px
  line-height 136px
  float left
  position relative
  box-shadow 0 0 0 0 #c9ede1
  margin 20px 20px 0 20px
  .left-check-box
    width 30px
    height 96px
    line-height 96px
    float left
  .pic-box
    width 96px
    height 136px
    float left
    position relative
    .pic-icon1
      width 96px
      height 96px
      line-height 96px
      text-align center
      font-size 42px
      color white
      margin 0
      border-radius 3px
      position absolute
      left 0
      top 0
      cursor pointer
    .pic-icon2
      width 96px
      height 96px
      line-height 96px
      text-align center
      font-size 16px
      color white
      margin 0
      background black
      background rgba(0,0,0,0.2)
      border-radius 3px
      position absolute
      left 0
      top 0
    .pic-icon3
      visibility hidden
    h5
      width 96px
      height 40px
      line-height 40px
      text-align center
      position absolute
      left 0
      bottom 0
.modal-content
  padding 0 30px 0 0
  ul
    overflow hidden
    .modal-list
      width 260px
      height 55px
      line-height 55px
      float left
      text-align right
      font-size 16px
      .comsys-checkbox.slider
        margin-left 20px


  .btn-box
    text-align center
    margin-top 40px





