@import 'DF-common.styl';
@import 'student-center.styl';

html
body
  .information-section
    .search
      float right
      width 250px
      height 30px
      overflow hidden
      input.search-input
        width: 220px
        height 30px
        border none
        background white
        padding-left 5px
        display block
        float left
      a.sublime
        width: 30px
        height: 30px
        display block
        float right
        background url("../icons/search-background.png") no-repeat;
    .book-list
      width 100%
      .book
        position relative
        background #fff
        padding 10px
        width 18.5%
        height 300px
        margin-right 1.7%
        float left
        margin-bottom 20px
        .book-img
          width 100%
          height 200px
          margin-bottom 20px
        .peopleNumber
          position absolute
          height 30px
          font-size 12px
          right 10px
          top 180px
          color #fff
          padding 0 15px
          background rgba(255,255,255,.4)
          line-height 30px
        .repaid
          position absolute
          top -7px
          right -7px
        .bookName
          font-size 16px
          color #333
          margin-bottom 10px
        .author
          img
            width 30px
            height 30px
            display block
            float left
            margin-right 15px
          span
            display block
            float left
            font-size 12px
            line-height 30px
            color #4a4a4a
      .book:nth-child(5n)
        margin-right 0

@media screen and (max-width : 1390px)
  html
  body
    .information-section
      .book-list
        .book
          width 24%
          margin-right 1.1%
        .book:nth-child(4n)
          margin-right 0
        .book:nth-child(5n)
          margin-right 1.1%



