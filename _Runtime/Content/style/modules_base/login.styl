@import './../setting.styl';
@import './../base/core/common.styl';

body
	display none
.body
	.swbanner
		.container
			position relative
			height 100%
		.login-panel
			overflow hidden
			position absolute
			width 325px
			height 375px
			background rgba(0, 0, 0, .5)
			z-index 1
			top 50%
			right 0
			margin-top -187px
			opacity 0
			//transform-origin -500px
			transform perspective(600px) rotateY(90deg)
			transition transform .3s, opacity .3s cubic-bezier(0,2,0,2) 0s;
			&.forward-in
				transform perspective(600px)  rotateY(0deg)
				opacity 1
			&.forward-out
				transform perspective(600px)  rotateY(-90deg)
			.toggle
				cursor pointer
				width 84px
				height 84px
				background #bcb5c9
				position absolute
				right -42px
				top -42px
				z-index 1
				transform rotate(45deg)
				overflow hidden
			h1
				text-align center
				line-height 90px
				color white
				font-size 20px
				span
					padding-left 10px
					font-size 14px
					color #c7b7ce
			&.form-barcode
				.row
					width 80%
					margin 0 auto
					&>div
						line-height 60px
						height 60px
						position relative
						font-size 0
						.input
							cursor text
							width 100%
							background white
							position absolute
							height 40px
							line-height 40px
							top 50%
							margin-top -20px
							padding 13px 10px 0px 50px
							input
								border 0
								background transparent
								width 100%
								display inline-block
								vertical-align top
						input:-webkit-autofill
							box-shadow: 0 0 0 35px white inset !important;
							color #333 !important;
						.login
							padding 0
							line-height 40px
							cursor pointer
							height 40px
							background #a57fea
							color white
							width 100%
							border-radius 5px
							display inline-block
							vertical-align middle
					.user
					.pass
					.auth
						&:before
							position absolute
							content ''
							inlineBlock()
							height 40px
							width 40px
							background url('./../images/pass.png') no-repeat center center
							top 50%
							margin-top -20px
							z-index 1
					.user
						&:before
							background url('./../images/user.png') no-repeat center center
					.validate
						overflow hidden
						text-align right
						img
							cursor pointer
							height 40px
							width 100px
							position absolute
							left 1px
							top 50%
							margin-top -20px
				.toggle
					&:before
						position absolute
						top 58px
						left 25px
						display block
						content ''
						width 35px
						height 36px
						transform rotate(-45deg)
						background url('./../images/twodlogin.png') no-repeat center center
			&.two-dimensional-barcode
				.img-container
					margin 0 auto
					height 195px
					width 195px
					line-height 195px
				p
					text-align center
					color white
					font-size 14px
					margin-top 35px
				.toggle
					&:before
						position absolute
						top 58px
						left 25px
						display block
						content ''
						width 35px
						height 36px
						transform rotate(-45deg)
						background url('./../images/formlogin.png') no-repeat center center
		.aphorism
			width 429px
			height 115px
			position absolute
			left 50%
			top 50%
			margin-left -439px
			margin-top -57px
			z-index 1
			&.aphorism-1
				background url('./../images/aphorism-1.png') no-repeat center center
			&.aphorism-2
				background url('./../images/aphorism-2.png') no-repeat center center
		position relative
		overflow hidden
		width 100%
		.swbanner-left
		.swbanner-right
			position absolute
			width 60px
			height 60px
			background rgba(0, 0, 0, .5)
			z-index 3
			top 50%
			margin-top -30px
			color white
			line-height 60px
			text-align center
			font-size 0
			cursor pointer
			opacity .4
			transition opacity .2 ease
			i
				opacity .5
				transition margin-left .2s ease, margin-right .2s ease, opacity .2s ease
				inlineBlock()
				font-size 40px
			&:hover
				opacity 1
				i
					opacity 1
		.swbanner-left
			left 0
			&:hover
				i
					margin-left -10px
		.swbanner-right
			right 0
			&:hover
				i
					margin-right -10px
		.swbanner-control
			font-size 0
			position absolute
			bottom 0
			left 0
			right 0
			text-align center
			height 40px
			a
				inlineBlock()
				width 10px
				height 10px
				background #9b9a9b
				margin 0 8px
				border-radius 100%
				&.current
					background white
		&>img
			display none
			position absolute
			left 0
			top 0
	.nav
		height 200px
		.col-4
			text-align center
		.col-4:first-child
			text-align left
		.col-4:last-child
			text-align right
		.column-container
			height 200px
			line-height 200px
		.column
			padding-top 1px
			text-align center
			display inline-block
			vertical-align middle
			line-height 1
			.img-container
				margin-top 10px
				margin-bottom 10px
				inlineBlock()
				width 82px
				height 82px
				line-height 82px
				transition margin .2s ease
				&:hover
					margin-top 0px
					margin-bottom 20px
			h1
				line-height 1.5
				font-size 16px
				color #1f1d20
			p
				color #807f81
				a
					color #807f81
				span
					padding 0 5px
for index in 0..10
	@media screen and (max-height:768px - index*10px)
		.body
			.swbanner
				.login-panel
					width 325px -  (index + 1) * 5px
					h1
						line-height 90 - (index + 1) * 3.5px
					height 375px - (index + 1) * 10px
					margin-top 0 - ((375px - (index + 1) * 10px)/2)
					&.form-barcode
						.row
							&>div
								line-height 60px - (index + 1) * 0.8px
								height 60px - (index + 1) * 0.8px
					&.two-dimensional-barcode
						.img-container
							margin 0 auto
							height 195px - (index + 1) * 4px
							width 195px - (index + 1) * 4px
							line-height 195px - (index + 1) * 4px
						p
							margin-top 35px -  (index + 1) * 1.5px

@media screen and (max-height:620px)
	.body
		padding-top 70px
		margin-top -70px
	.header
		height 70px
		.header-left
			line-height 70px
		.header-right
			height 70px
			line-height 70px
for index in 1..5
	$navHeight = 200px - index*10;
	@media screen and (max-height: 600px - index*10px)
		.body
			.nav
				height $navHeight
				.column-container
					height $navHeight
					line-height $navHeight