@import './appeal-base.styl'
$colorB= #794985
$colorBD= #d3d3d3
.calendar-query
	width 100%
	height 30px
	line-height 30px
	font-size 0px
	.comsys-base
		width 200px
		margin-right 5px
	button
		cursor pointer
		ib()
		width 30px
		height 30px
		background $colorB
		border 0
		&:before
			font-family "ElegantIcons"
			content "U"
			color white

.type-find
	width 100%
	margin-top 20px
	span
		height 25px
		line-height 25px
		padding 0 12px
		border 1px $colorBD solid
		display inline-block
		margin 0 5px
		border-radius 3px
		cursor pointer
		&:hover
			background $colorB
			color white
			border 1px $colorB solid
	.active
		background $colorB
		color white
		border 1px $colorB solid
	.release
		width auto
		height 40px
		line-height 40px
		overflow hidden
		fr()
		margin-top -10px
		a
			height 40px
			line-height 40px
			padding 0 14px
			border-radius 3px
			display inline-block
			border 0
			color white
			cursor pointer
.release1
	background #eb6876
.release2
	background #77b3d5
.details-content
	width 100%
	margin-top 20px
	.details-list
		width 100%
		height 200px
		background white
.left-content
	width 200px
	height 100%
	border 1px $colorBD solid
	position relative
	fl()
	.genre
		width 90px
		height 35px
		line-height 35px
		color white
		display block
		text-align center
		border-bottom-right-radius 6px
	.imgbox
		width 60px
		height 60px
		margin 0 auto
		margin-top 8px
		border-radius 50%
		overflow hidden
		padding 3px
		img
			width 54px
			height 54px
			border-radius 50%
	.name
		height 34px
		line-height 34px
		text-align center
		margin-top 10px
	.number
		text-align center
		margin-top 5px
.left-content2
	border-top 0
.right-content
	height 100%
	border 1px $colorBD solid
	border-left 0
	fl()
	.imgbox
		width auto
		height 60px
		margin-top 10px
		border-collapse collapse
		td
			border 1px $colorBD solid
			img
				width 58px
				height 58px


	.text-narrative
		margin-top 10px
		line-height 20px
	.summary
		margin-top 20px
		color #989898
		span
			margin-left 30px
.right-content2
	border-top 0
.pageBtn
	margin-top 20px
	text-align center
	button
		padding 4px 10px
		border 1px #cccccc solid
		color #999999
		cursor pointer
		margin 0 5px
		&:hover
			background $colorB
			color white
	.active
		background $colorB
		color white
@media screen and (max-width 1425px)
	.right-content
		width 780px
@media (min-width: 1426px)
	.right-content
		width 1110px
