@import './../setting.styl';
@import './../base/core/common.styl';

$c1 = #eb6877;
$c2 = #77b3d4;
$c3 = #76c2af;
$c4 = #fbd641;

html
body
	height 100%
	background transparent
	position relative
	.main
		position absolute
		height 100%
		left 0
		right 0
.panel-title
	background white
.section
	font-size 0
	padding-bottom 85px
	.section-body
		min-height 770px
		max-width 1350px
		width 100%
		overflow hidden
	.section-top
		text-align right
		line-height 85px
		height 85px
		max-width 1320px
		display block
		color white
		white-space nowrap
.frame-container
	.calendar-query
		width 100%
		height 26px
		line-height 26px
		background red
		.calendar-input
			width 200px
			height 100%
			line-height 100%
			background white
			display block
			fl()
	c()

@media screen and (max-width 1425px)
	.section
		.section-body
			max-width 1020px
			&>.panel
				width 1020px
		.section-top
			max-width 1020px