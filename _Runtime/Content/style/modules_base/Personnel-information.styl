@import './data-center.styl';

html
body
  height 100%
  background transparent
  .information
    width 1253px
    height auto
    background #f6f2f5
    padding 30px
    .information-section
      width 100%
      height auto
      margin-bottom 40px
      overflow hidden
      p.title
        height 30px
        line-height 30px
        color #2b2626
        font-size 16px
        text-indent 10px
        margin-bottom 10px
        background url("../icons/DF-title-bac.png") no-repeat
       .search
         float right
         width 250px
         height 30px
         overflow hidden
         input.search-input
           width: 220px
           height 30px
           border none
           background white
           padding-left 5px
           display block
           float left
         a.sublime
           width: 30px
           height: 30px
           display block
           float right
           background url("../icons/search-background.png") no-repeat;
      table
        width 100%
        height auto
        background white
        tr
          td
            height: 30px
            line-height 30px
            border-right 1px solid #d4d4d4
            border-bottom 1px solid #d4d4d4
          td:last-child
            border-right none

        tr:last-child
          border-bottom none
          td
            border-bottom none


      /*左边是高亮颜色的表格*/
      table.left-background
        tr
          td
            padding-left 10px
          td:nth-child(odd)
            background #ede9ef


      /*高亮在头顶的表单*/
      .topWeight
          tr:first-child
            background #ede9ef
            font-weight bold
          tr
            td
              text-align center
.pageJump
  width:100%
  height: 25px
  overflow hidden
  position: relative;
  .jumpBtn
    position relative
    float left
    left 50%
    height:25px
    .sublimeBtn
      position: relative;
      left: -100%;
      top 8px
      height 25px
      a
        padding 2px 8px
        border 1px solid #999
        color #999
        height 25px
      a.btnActive
        color #fff
        background #4f2659

  .text
    float left
    color #4f2659
    font-size 12px
    display block
    line-height 25px
  .jumps
    float right
    input
      width: 25px
      height: 23px
      background white
      border 1px solid #eee
    .jump
      display inline-block
      height:25px
      color #fff
      font-size 14px
      padding 0 10px
      line-height 25px
      background #794986

@media screen and (max-width : 1024px)
  html
  body
    .information
      width 850px






