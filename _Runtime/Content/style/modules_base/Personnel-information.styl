@import 'DF-common.styl';
@import './data-center.styl';

html
body
  height 100%
  background transparent
  position relative
  .main
    position absolute
    height 100%
    left 0
    right 0
    overflow hidden
  .information
    width 1253px
    height auto
    background #f6f2f5
    padding 30px
    margin-bottom 80px
    position relative
    pageJump
      table
        width 100%
        height auto
        background white
        tr
          td
            height: 30px
            line-height 30px
            border-right 1px solid #d4d4d4
            border-bottom 1px solid #d4d4d4
          td:last-child
            border-right none

        tr:last-child
          border-bottom none
          td
            border-bottom none

@media screen and (max-width : 1390px)
  html
  body
    .information
      width 850px





.fixed
  position fixed
  top 145px
  z-index 10
  .fixed_auto
    width 1250px
    margin 0 auto
    min-height 100px
    .information_nav:before
      content ''
      width 16px
      height 16px
      border-radius 50%
      border 1px solid #fff
      display inline-block
    .information_nav
      position absolute
      width 200px
      top 0
      right -230px
      ul
        width 192px
        margin-left 9px
        border-left 1px solid #fff
        margin-bottom 20px
        li:last-child
          height 20px
        li
          height 36px
          a
            display black
            height 36px
            line-height 36px
            color #fff
            font-size 14px
            padding-left 20px
        li:before
          display inline-block
          content ''
          height 12px
          width 12px
          background #fff
          border-radius 50%
          margin-left -7px
          margin-top 2px
        .active:before
          background rgb(108,57,127)
      .menu_btn:hover
        background rgb(108,57,127)
        text-decoration none
      .menu_btn
        display block
        width 36px
        height 36px
        border 1px solid #fff
        text-align center
        margin-top 10px
        margin-bottom 5px
      .menu:before
        setIcoFont()
        content: "d"
        width 100%
        height 100%
        font-size 22px
        color #fff
      .up_btn:hover
        background rgb(108,57,127)
        text-decoration none
      .up_btn
        display block
        width 36px
        height 36px
        border 1px solid #fff
        text-align center
        .arrow_carrot-up:before
          setIcoFont()
          content: "2"
          width 100%
          height 100%
          font-size 22px
          color #fff








