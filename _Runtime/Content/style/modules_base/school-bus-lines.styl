@import './appeal-base.styl'

.tip-panel
	background #f2f2f2 url('./../images/tip-panel-img.png?exclude') no-repeat right bottom
	line-height 30px
	opacity .9

.top-header
	line-height 60px
	text-align center
	font-size 18px
	color #502659
	&:before
	&:after
		content ''
		ib()
		width 80px
		height 1px
		background #e3e3e3 - 20%
		margin 0 50px
.trains
	margin-top -30px
	.select
		width 100%
		height 30px
		line-height 30px
		border-radius 3px
		margin 10px 0
		&:hover
			background #eeeeee
		a
			color #333333
			width 100%
			height 30px
			line-height 30px
			display block
			text-align center
			font-size 15px
			text-decoration none
			.Serial-number
				font-style normal
				width 18px
				height 18px
				line-height 18px
				display inline-block
				font-size 10px
				border 1px #646464 solid
				border-radius 50%
				margin-right 8px

	.active
		background #eeeeee
.frame-container
	c()
	.frame-left
		width 200px
		background white
		margin-top 40px
		min-height 980px
		fl()
	.frame-right
		margin-left 204px
		.bus-line
			background #eeeeee
			padding 13px 24px
			.address
				font-size 14px
			img
				margin 0 25px
			.shift1
				margin-left 50px
			.shift2
				margin-left 20px
			.shift
				color #999999
				i
					font-style normal
					margin-left 10px
		.add-box
			height auto
			padding 0 24px
			.address-content
				li
					height 40px
					line-height 40px
					padding-left: 130px
					position relative
					font-size 12px
					color #999999
					.dot-default
						width 12px
						height 12px
						display block
						background url("../images/dot1.png") no-repeat
						position absolute
						left 38px
						top:14px
					.process
						background url("../images/dot2.png") no-repeat
					.vertical-bar
						width 2px
						height 28px
						display block
						background #dddddd
						position absolute
						top 26px
						left 43px
						z-index 1
				.listBg1
					background #f8f8f8
		.map-location
			padding 0 24px
			margin-top 10px
			.map
				padding 12px
				height 460px
				background white
				img
					width 100%
					height 100%


