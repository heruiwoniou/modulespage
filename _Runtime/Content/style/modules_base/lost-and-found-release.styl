@import './appeal-base.styl'
.tip-panel
	background #f2f2f2 url('./../images/tip-panel-img.png?exclude') no-repeat right bottom
	line-height 30px
	opacity .9

.top-header
	line-height 60px
	text-align center
	font-size 18px
	color #502659
	&:before
	&:after
		content ''
		ib()
		width 80px
		height 1px
		background #e3e3e3 - 20%
		margin 0 50px
.frame-container
	c()
	.frame-left
		width 200px
		background white
		margin-top 5px
		min-height 687px
		fl()
	.frame-right
		margin-left 0px
.type-btn
	height 30px
	line-height 30px
	padding 0 10px
	border 1px #d4d4d4 solid
	display inline-block
	text-align center
	border-radius 4px
	cursor pointer
	&:hover
		background #794985
		border 1px #794985 solid
		color white
.active
	background #794985
	border 1px #794985 solid
	color white
td
	padding-right 20px
.the-contact
	padding-left 12px
.btn
	margin 0 10px