html
body
	height 100%
	background transparent
	position relative
	.main
		position absolute
		height 100%
		left 0
		right 0
	.data-center
		margin-top 85px
		width 100%
		.center-nav
			width 750px
			height 50px
			background #ede3ea
			margin-top 72px
			margin-bottom 10px
			overflow hidden
			li
				float left
				width 150px
				height 50px
				border-right 1px solid #502659
				a
					display block
					height: 50px
					text-align center
					line-height 50px
					color #502659
					font-size 15px
			li.last
				border-right none!important

			li.active
				a
					color #fff!important
					background #84528a!important

@media screen and (min-width:1510px)
	.center-section
		width 1354px
		height auto
		overflow hidden
		.center-table
			width 440px
			height 350px
			float left
			margin-right 10px
			background white
			margin-top 10px
			.center-title
				height 60px
				line-height 60px
				padding 0 17px
				color #2b2626
				font-size 16px
				overflow hidden
				span.title-company
					color #999999
					font-size 12px
					float right
			.table-img
				width:100%
				height 290px
				background #f6f3f6
				overflow hidden
				img
					width 402px
					height:190px
					margin 40px auto 0
					display block

