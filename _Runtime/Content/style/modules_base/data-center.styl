html
body
	height 100%
	background transparent
	position relative
	.main
		position absolute
		height 100%
		left 0
		right 0
		overflow hidden
	.data-center
		margin-top 85px
		width 100%
		.center-nav
			width 750px
			height 50px
			background #ede3ea
			margin-top 72px
			margin-bottom 10px
			overflow hidden
			li
				float left
				width 150px
				height 50px
				border-right 1px solid #502659
				a
					display block
					height: 50px
					text-align center
					line-height 50px
					font-size 15px
			li.last
				border-right none!important

@media screen and (min-width:1510px)
	.center-section
		width 1263px
		height auto
		overflow hidden
		.center-table
			width 410px
			height 350px
			float left
			margin-right 10px
			background white
			margin-bottom 10px
			.center-title
				height 60px
				line-height 60px
				padding 0 17px
				color #2b2626
				font-size 16px
				overflow hidden
				span.title-company
					color #999999
					font-size 12px
					float right
			.table-img
				width:100%
				height 290px
				background #f6f3f6
				overflow hidden
				img
					width 402px
					height:190px
					margin 40px auto 0
					display block

@media screen and (max-width:1510px)
	.center-section
		width 904px
		height auto
		overflow hidden
		.center-table
			width 440px
			height 350px
			float left
			margin-right 10px
			background white
			margin-top 10px
			.center-title
				height 60px
				line-height 60px
				padding 0 17px
				color #2b2626
				font-size 16px
				overflow hidden
				span.title-company
					color #999999
					font-size 12px
					float right
			.table-img
				width:100%
				height 290px
				background #f6f3f6
				overflow hidden
				img
					width 402px
					height:190px
					margin 40px auto 0
					display block


.information-section
	width 100%
	height auto
	margin-bottom 40px
	overflow hidden
	p.title
		height 30px
		line-height 30px
		color #2b2626
		font-size 16px
		text-indent 10px
		margin-bottom 10px
		//background url("../icons/DF-title-bac.png") no-repeat
	.title
		.colorBox
			width 4px
			height 28px
			display inline-block
			float left
	.search
		float right
		width 250px
		height 30px
		overflow hidden
		input.search-input
			width: 220px
			height 30px
			border none
			background white
			padding-left 5px
			display block
			float left
		a.sublime
			width: 30px
			height: 30px
			display block
			float right
			//background url("../icons/search_png.png") no-repeat center;
		a.sublime:before
			width 15px
			height 15px
			content ''
			margin-top 7px
			margin-left 7px
			display inline-block
			background url("../icons/search_png.png") no-repeat center;
	table
		width 100%
		height auto
		background white
		tr
			td
				height: 30px
				line-height 30px
				border-right 1px solid #d4d4d4
				border-bottom 1px solid #d4d4d4
			td:last-child
				border-right none

		tr:last-child
			border-bottom none
			td
				border-bottom none




