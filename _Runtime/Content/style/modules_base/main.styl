			.frame-left
				width 1010px
			.frame-right
				width 300px
			.frame-left
			.frame-right
				.panel
					margin-bottom 10px
					background white
					&.panel-left
						float left
						width 500px
					&.panel-right
						float right
						width 500px
					&:last-child
					&.panel-bottom
						margin-bottom 0
