			&>.frame-full
				&:after
					content ''
					clear()
				.panel
					float left
					margin-right 10px
					&.panel-left
						width 810px
					&.panel-right
						width 500px
						margin-right 0
			&>.frame-left
				width 300px
			&>.frame-right
				width 1010px
				.frame-full:first-child
					.panel-left
					.panel-right
						width 500px
						float left
					.panel-right
						float right
					&:after
						clear()
				.frame-full:last-child
