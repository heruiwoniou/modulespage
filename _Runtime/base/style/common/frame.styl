::-webkit-input-placeholder
	color $basefontcolor - 40%
:-moz-placeholder
	color $basefontcolor - 40%
::-moz-placeholder
	color $basefontcolor - 40%
:-ms-input-placeholder
	color $basefontcolor - 40%

.comsys-box-window
	.comsys-box-content
		color #333
		*
			color #333
		input
		textarea
			background white
		input
			border 1px solid #ccc
		textarea
			border 1px solid #ccc
		table.list
			border-color #ccc
			th,td
				color #333
				border-color #ccc
				background rgba(0,168,255,0.1)
			th
				background rgba(8,10,24,.1)
				border-bottom 1px solid #ccc
			&.empty
				td
					background transparent
		.page-control
			a
				border 1px solid #ccc
				background rgba(0,168,255,0.1)
				&:before
					color #ccc - 20%
				&:hover
					border-color $color
					text-decoration none
					&:before
						color $color